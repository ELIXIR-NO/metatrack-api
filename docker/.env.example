# Production environment variables for docker-compose.prod.yml
# Copy this file to ".env" in the same directory (docker/.env)
# and fill in secure values before deploying.

# ====== Image source (from GHCR) ======
# Set the fully qualified image name that the server should pull.
# Replace <owner> if your GitHub user/org differs from repository owner.
IMAGE=ghcr.io/<owner>/metatrack-api
# Choose a tag to deploy (e.g., main, latest, v1.2.3, or a commit SHA)
IMAGE_TAG=main

# ====== Required secrets ======
NEO4J_PASSWORD=change_me_strong
POSTGRES_PASSWORD=change_me_strong
MINIO_ACCESS_KEY=minio_admin
MINIO_SECRET_KEY=change_me_strong
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=change_me_strong

# ====== Domain / OAuth2 configuration ======
# Public hostname where Keycloak will be accessible
KEYCLOAK_HOSTNAME=auth.metatrack.no
# Realm and client used by the Spring Boot app
KEYCLOAK_REALM=metatrack
KEYCLOAK_CLIENT_ID=metatrack_api
# Create this client in Keycloak and paste its client secret here
KEYCLOAK_CLIENT_SECRET=change_me_strong

# ====== Optional tuning ======
# Adjust if needed; otherwise compose has resource limits
#JAVA_OPTS=-XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0 -XX:+UseG1GC -XX:MaxGCPauseMillis=200
